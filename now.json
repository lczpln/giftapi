{
    "version": 2,
    "builds": [
        {
            "src": "index.js",
            "use": "@now/node-server"
        }
    ],
    "routes": [
        {
            "src": "/",
            "dest": "/index.js",
            "methods": [
                "GET"
            ]
        },
        {
            "src": "/gift",
            "dest": "/index.js",
            "methods": [
                "POST"
            ]
        },
        {
            "src": "/gift/(?<id>[^/]+)",
            "dest": "/index.js",
            "methods": [
                "GET"
            ]
        }
    ]
}